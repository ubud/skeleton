{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "strict": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "es2017.object",
            "dom"
        ],
        "paths": {
            "@ubud/*": ["src/@ubud/*"]
        }
    },
    "exclude": [
        "./src/@ubud"
    ],
    "include": [
        "./apps/**/*",
        "./src/**/*"
    ]
}
